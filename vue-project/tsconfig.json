{
  "compilerOptions": {
    "types": ["vite/client", "vue"],
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
          "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
},
"include": [
  "src/**/*.ts",
  "src/**/*.d.ts",
  "src/**/*.tsx",
  "src/**/*.vue"
],
"references": [
  {
    "path": "./tsconfig.node.json"
  }
],
  "allowImportingTsExtensions": true
}
